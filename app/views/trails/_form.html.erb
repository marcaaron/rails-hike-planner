<%= form_with(model: @trail, local: true, class: 'trail-form') do |form| %>

  <% if @trail.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@trail.errors.count, "error") %> in trail submission:
      </h2>
      <ul>
        <% @trail.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Trail Name -->
  <div class="trail-form__item">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <!-- Trail Description -->
  <div class="trail-form__item">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <!-- Trail Start Coordinates -->
  <div class="trail-form__item">
    <%= form.label :latitude %>
    <%= form.text_field :latitude %>
    <%= form.label :longitude %>
    <%= form.text_field :longitude %>
  </div>

  <!-- Trail Difficulty -->
  <div class="trail-form__item">
    <%= form.label :difficulty %>
    <%= form.select(:difficulty, options_for_select([['Light', 1], ['Moderate', 2], ['Strenuous', 3]])) %>
  </div>

  <!-- Trail Direction -->
  <div class="trail-form__item">
    <%= form.label :direction %>
    <%= form.select(:direction, options_for_select([['Out & Back', 1], ['Loop', 2]])) %>
  </div>

  <!-- Submit Button -->
  <div class="trail-form__item">
    <%= form.submit %>
  </div>
<% end %>
